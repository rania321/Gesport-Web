<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <title>Inscription</title>
    <!-- Custom styles -->
    <style>
        .form-group {
            margin-bottom: 1.5rem;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="text-center mt-5">Inscription</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post" novalidate>
                    {{ form_start(form, {'attr': {'class': 'form-group', 'novalidate': 'novalidate', 'id': 'registration'}}) }}

                    {# Champ Nom #}
                    <div class="form-group">
                        {{ form_label(form.nomu, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nomu, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre nom'}}) }}
                        <div class="text-danger"> {{ form_errors(form.nomu) }}  </div>
                    </div>

                    {# Champ Prénom #}
                    <div class="form-group">
                        {{ form_label(form.prenomu, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.prenomu, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre prénom'}}) }}
                        <div class="text-danger"> {{ form_errors(form.prenomu) }}  </div>
                    </div>

                    {# Champ Email #}
                    <div class="form-group">
                        {{ form_label(form.emailu, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.emailu, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre email'}}) }}
                        <div class="text-danger"> {{ form_errors(form.emailu) }}  </div>
                    </div>

                    {# Champ Mot de passe #}
                    <div class="form-group">
                        {{ form_label(form.mdpu, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.mdpu, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre mot de passe'}}) }}
                        <div class="text-danger"> {{ form_errors(form.mdpu) }}  </div>
                    </div>
                      {# Champ recaptcha #}
                       <div class="form-group">
                       {{ form_label(form.recaptcha, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.recaptcha, {'attr': {'class': 'form-control'}}) }}
                     {{ form_errors(form.recaptcha) }}
                </div>

                    {# Champ Rôle #}
                    <div class="form-group">
                        {#{ form_label(form.roleu, 'Rôle', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.roleu, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.roleu) }#}
                    </div>
                     

                    {# Bouton Enregistrer #}
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>

                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>
    
    <!-- Script reCAPTCHA -->
    

</body>

</html>
