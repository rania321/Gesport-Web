{% extends 'base.html.twig' %}

{% block title %}Inscritournoi index{% endblock %}
{% block carousel %}
<div class="container-fluid bg-breadcrumb">
            <div class="container text-center py-5" style="max-width: 900px;">
                <h3 class="text-white display-3 mb-4">Inscription</h3>
                <ol class="breadcrumb justify-content-center mb-0">
                    <li class="breadcrumb-item"><a href="./base">Accueil</a></li>
                    <li class="breadcrumb-item active text-white">Activite</li>
                </ol>    
            </div>
        </div>
{% endblock %}

{% block content %}
    <h1>Inscritournoi index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Equipe</th>
                <th>Tournoi</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inscritournoi in inscritournois %}
            <tr>
                <td>{{ inscritournoi.Equipe.nome }}</td>
                <td>{{ inscritournoi.Tournoi.nomt }}</td>
                <td>
                    <a href="{{ path('app_inscritournoi_show', {'idit': inscritournoi.idit}) }}">show</a>
                    <a href="{{ path('app_inscritournoi_edit', {'idit': inscritournoi.idit}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_inscritournoi_new') }}">Create new</a>
{% endblock %}