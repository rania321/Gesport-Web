<form method="post" action="{{ path('reclamation_delete', {'idrec': reclamation.idrec}) }}" onsubmit="return confirmDelete();" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete'~reclamation.idrec) }}">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<script>
// Enhance the confirmation dialog
function confirmDelete() {
    return confirm('Are you sure you want to delete this item? This action cannot be undone.');
}
</script>
