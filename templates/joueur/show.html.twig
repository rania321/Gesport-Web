{% extends 'base.html.twig' %}

{% block title %}Joueur{% endblock %}
{% block carousel %}
<div class="container-fluid bg-breadcrumb">
            <div class="container text-center py-5" style="max-width: 900px;">
                <h3 class="text-white display-3 mb-4">Joueurs</h3>
                <ol class="breadcrumb justify-content-center mb-0">
                    <li class="breadcrumb-item"><a href="./base">Accueil</a></li>
                    <li class="breadcrumb-item active text-white">Activite</li>
                </ol>    
            </div>
        </div>
{% endblock %}

{% block content %}
<div class="container py-5">
    <h1>Liste des Joueurs</h1>
    
    <div class="row mt-4">
        <div class="col-md-6">
            {% if joueurs is empty %}
                <p>Aucun joueur trouvé dans cette équipe.</p>
            {% else %}
                <ul class="list-group">
                    {% for joueur in joueurs %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{ joueur.joueur }}
                            <form method="post" action="{{ path('app_joueur_delete', {'idj': joueur.idj}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ joueur.idj) }}">
                                <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                            </form>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
            <a href="{{ path('app_equipe_show', {'ide': equipe.ide}) }}" class="btn btn-primary mt-3">Retour à l'Équipe</a>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title mb-4">Ajouter un Nouveau Joueur</h2>
                    {{ include('joueur/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}