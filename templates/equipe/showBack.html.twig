{% extends 'baseBack.html.twig' %}

{% block title %}Equipe{% endblock %}

{% block content %}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <!-- Colonne pour afficher les détails de l'équipe -->
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-body text-center d-flex align-items-center justify-content-center">
                        <h2 class="mb-4">Equipe</h2>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th>Equipe</th>
                                    <td>{{ equipe.nome }}</td>
                                </tr>
                                <tr>
                                    <th>Tournoi</th>
                                    <td>{{ equipe.tournoi.nomt }}</td>
                                </tr>
                                <tr>
                                    <th>Capitaine</th>
                                    <td>{{ equipe.user.nomu }}</td>
                                </tr>
                                <tr>
                                    <th>Statut</th>
                                    <td>{{ equipe.statute }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer text-end">
                        <a href="{{ path('app_equipe_editBack', {'ide': equipe.ide}) }}" class="btn btn-inverse-info">Modifier</a>
                    </div>
                </div>
            </div>
            <!-- Colonne pour afficher le formulaire d'ajout de joueur et la liste des joueurs -->
            <div class="col-lg-6">
                <!-- Card pour ajouter un nouveau joueur -->
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h2 class="mb-4">Ajouter un nouveau joueur</h2>
                        {{ include('joueur/_form.html.twig') }}

                    </div>
                </div>
                <!-- Liste des joueurs -->
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title mb-4">Liste des Joueurs</h2>
                        {% if joueurs is empty %}
                            <p>Aucun joueur trouvé dans cette équipe.</p>
                        {% else %}
                            <ul class="list-group">
                                {% for joueur in joueurs %}
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        {{ joueur.joueur }}
                                        <form method="post" action="{{ path('app_joueur_deleteBack', {'idj': joueur.idj}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ joueur.idj) }}">
                                            <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                                        </form>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
       <!-- Bouton de retour à la liste des équipes -->
<div class="mt-3 d-flex justify-content-start">
    <a href="{{ path('app_equipe_indexBack') }}" class="btn btn-inverse-warning">Retour à la liste</a>
</div>
    </div>
</div>
{% endblock %}