
{% extends 'baseBack.html.twig' %}

{% block title %}Equipe index{% endblock %}

{% block content %}
<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-sm-6">
        <h2 class="mb-4" style="color: rgb(7, 76, 141);">Liste des Equipes</h2>
      </div>
      <div class="col-sm-4 d-flex justify-content-end">
        <a href="{{ path('app_equipe_newBack') }}" class="btn btn-inverse-primary mb-3">Create New</a>

    </div>
    </div>

    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">Equipe</th>
          <th scope="col">Tournoi</th>
          <th scope="col">Capitaine</th>
          <th scope="col">Statut</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for equipe in equipes %}
        <tr>
          <td>{{ equipe.nome }}</td>
          <td>{{ equipe.tournoi.nomt }}</td>
          <td>{{ equipe.user.nomu }}</td>
          <td>
            <span class="badge 
            {% if equipe.statute == 'Qualifiée' %}
            badge-success
            {% elseif equipe.statute == 'Éliminée' %}
            badge-danger
            {% elseif equipe.statute == 'inscrite' %}
            badge-primary
            {% else %}
            badge-primary
            {% endif %}
            ">
            {{ equipe.statute }}
        </span>
        </td>
          <td>
            <div class="d-flex">
                <a href="{{ path('app_equipe_showBack', {'ide': equipe.ide}) }}" class="btn btn-sm btn-outline-info btn-inverse-info me-1">
                    <i class="mdi mdi-eye"></i> Show
                </a>
                <a href="{{ path('app_equipe_editBack', {'ide': equipe.ide}) }}" class="btn btn-sm btn-outline-warning btn-inverse-warning me-1">
                  <i class="mdi mdi-pencil"></i> Edit
                </a>
                <form method="post" action="{{ path('app_equipe_delete', {'ide': equipe.ide}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipe.ide) }}">
                  <button type="submit" class="btn btn-sm btn-danger btn-inverse-danger" style="font-size: 13px;">
                    <i class="mdi mdi-delete"></i> Delete
                  </button>
                </form>
              </div>
            </td>
          </tr>
        {% else %}
        <tr>
          <td colspan="5">No records found</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}