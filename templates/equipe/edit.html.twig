{% extends 'base.html.twig' %}

{% block title %}Edit Equipe{% endblock %}
{% block carousel %}
<div class="container-fluid bg-breadcrumb">
            <div class="container text-center py-5" style="max-width: 900px;">
                <h3 class="text-white display-3 mb-4">Equipes</h3>
                <ol class="breadcrumb justify-content-center mb-0">
                    <li class="breadcrumb-item"><a href="./base">Accueil</a></li>
                    <li class="breadcrumb-item active text-white">Activite</li>
                </ol>    
            </div>
        </div>
{% endblock %}

{% block content %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title">Edit Equipe</h1>
                </div>
                <div class="card-body">
                    {{ include('equipe/_formFront.html.twig', {'form': formFront}) }}                </div>
                <div class="card-footer text-end">
                    <a href="{{ path('app_equipe_show', {'ide': equipe.ide}) }}" class="btn btn-primary me-2">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}