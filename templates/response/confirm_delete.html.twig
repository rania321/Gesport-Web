{% extends 'baseBack.html.twig' %}

{% block body %}
<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            Confirm Deletion
        </div>
        <div class="card-body">
            <p>Are you sure you want to delete this response?</p>
            
            <form action="{{ path('response_delete', {'idrep': response.idrep}) }}" method="post">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ response.idrep) }}">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="{{ path('response_index') }}" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
{% endblock %}
