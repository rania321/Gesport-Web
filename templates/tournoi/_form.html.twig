            <div class="text-danger">{{ form_errors(form.datedebutt) }}</div>

        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            {{ form_label(form.datefint, 'Date de fin') }}
